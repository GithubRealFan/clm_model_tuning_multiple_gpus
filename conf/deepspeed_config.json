{
    "train_batch_size": 1,
    "train_micro_batch_size_per_gpu": 1,
    "steps_per_print": 10,
    "gradient_accumulation_steps": 1,
    "fp16": {
        "enabled": true,
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "hysteresis": 2,
        "min_loss_scale": 1
    },
    "optimizer": {
        "type": "Adam",
        "params": {
            "lr": 5e-5
        }
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": 5e-5,
            "warmup_num_steps": 100
        }
    },
    "zero_optimization": {
        "stage": 2,
        "allgather_partitions": true,
        "allgather_bucket_size": 5e8,
        "reduce_scatter": true,
        "reduce_bucket_size": 5e8,
        "overlap_comm": true,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        }
    },
    "fp16_optimizer": {
        "enabled": true,
        "dynamic_loss_scale": false
    },
    "activation_checkpointing": {
        "partition_activations": true,
        "contiguous_gradients": true,
        "allocate_fp16": true,
        "sync": true,
        "verbose": false
    },
    "wall_clock_breakdown": false
}
